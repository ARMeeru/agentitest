# Rename this file to .env and fill in your API key.
# This file is for local development and should not be committed to version control.

# LLM Provider Configuration
# Supported values: "gemini", "openai", "anthropic", "azure", "groq"
LLM_PROVIDER="gemini"

# ====================
# Gemini Configuration
# ====================
# The specific Gemini model you want to use.
GEMINI_MODEL="gemini-2.5-pro"
# Your Google API key for accessing the Gemini model.
GOOGLE_API_KEY="YOUR_API_KEY"

# ====================
# OpenAI Configuration
# ====================
# The specific OpenAI model you want to use.
OPENAI_MODEL="gpt-4o-mini"
# Your OpenAI API key.
OPENAI_API_KEY="YOUR_API_KEY"

# =======================
# Anthropic Configuration
# =======================
# The specific Anthropic model you want to use.
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
# Your Anthropic API key.
ANTHROPIC_API_KEY="YOUR_API_KEY"

# ==================
# Azure Configuration
# ==================
# Your Azure OpenAI endpoint URL (required)
AZURE_ENDPOINT="https://your-resource.openai.azure.com/"
# Your Azure API key (required)
AZURE_API_KEY="YOUR_API_KEY"
# Your deployment name (optional if model is specified)
AZURE_DEPLOYMENT="your-deployment-name"
# The model to use (optional if deployment is specified)
AZURE_MODEL="gpt-4o-mini"
# API version (optional, defaults to 2024-10-21)
AZURE_API_VERSION="2024-10-21"

# ==================
# Groq Configuration
# ==================
# The specific Groq model you want to use.
GROQ_MODEL="llama-3.3-70b-versatile"
# Your Groq API key.
GROQ_API_KEY="YOUR_API_KEY"

# ====================
# Browser Configuration
# ====================
# Set to "true" to run the browser in headless mode, or "false" to run with a visible UI.
HEADLESS="true"
